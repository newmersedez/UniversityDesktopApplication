<Window x:Class="UniversityDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:UniversityDesktop.ViewModels"
        xmlns:local="clr-namespace:UniversityDesktop"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280" WindowState="Maximized" Background="#E6E6E6">
    
    <Window.DataContext>
        <viewModel:ViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border CornerRadius="25" BorderBrush="CadetBlue" BorderThickness="2"
                    Background="LightBlue" Height="40" Width="100" >
                <ContentControl Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Hello" />
            </Border>
        </ControlTemplate>
    </Window.Resources>
    
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        
        <!-- Menu (student info and control buttons) -->
        <Grid ShowGridLines="False"
              Grid.Column="0"
              Background="White"
              Margin="20 20 20 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="1.5*" />
            </Grid.RowDefinitions>
            
            <!-- Student info-->
            <ScrollViewer Grid.Row="0" Background="RoyalBlue" VerticalScrollBarVisibility="Auto">
                <StackPanel Orientation="Vertical">
                    <Image Source="../Images/mai.png" Width="100" Height="100" Margin="10 10 0 0" HorizontalAlignment="Left"/>
                    <WrapPanel Orientation="Horizontal" Margin="0 15 0 0">
                        <TextBlock FontSize="20" FontFamily="Arial" Foreground="White" Margin="10 0 0 0" Text="Тришин" />
                        <TextBlock FontSize="20" FontFamily="Arial" Foreground="White" Margin="10 0 0 0" Text="Дмитрий" />
                        <TextBlock FontSize="20" FontFamily="Arial" Foreground="White" Margin="10 0 0 0" Text="Александрович" />
                    </WrapPanel>
                    <TextBlock Margin="10 15 10 5" FontSize="15" FontFamily="Arial" Foreground="LightGray" Text="Группа"/> 
                    <TextBlock Margin="10 5 10 5" FontSize="20" FontFamily="Arial" Foreground="White" Text="М8О-311Б-19" />
                    <TextBlock Margin="10 15 10 5" FontSize="15" FontFamily="Arial" Foreground="LightGray" Text="Код специальности"/>
                    <TextBlock Margin="10 5 10 5" FontSize="20" FontFamily="Arial" Foreground="White" Text="02.03.02" />
                    <TextBlock Margin="10 15 10 5" FontSize="15" FontFamily="Arial" Foreground="LightGray" Text="Направление"/>
                    <StackPanel Orientation="Vertical">
                        <TextBlock Margin="10 5 10 5" TextWrapping="Wrap" FontSize="20" FontFamily="Arial" Foreground="White" 
                                   Text="Фундаментальная информатика и информационные технологии" />
                    </StackPanel>
                </StackPanel>
            </ScrollViewer>
            
            <!-- Control buttons -->
            <ScrollViewer Grid.Row="1" VerticalAlignment="Center" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
                <StackPanel>
                    <Button Margin="10 10 10 10" Height="70" Content="Расписание занятий" Template="{StaticResource btTemplate}" Command="{Binding LessonTimetableButtonCommand}" />
                    <Button Margin="10 10 10 10" Height="70" Content="Расписание сессии" Command="{Binding ExamButtonCommand}" />
                    <Button Margin="10 10 10 10" Height="70" Content="Оценки" Command="{Binding MarksButtonCommand}" />
                    <Button Margin="10 10 10 10" Height="70" Content="Мероприятия" Command="{Binding EventsButtonCommand}" />
                </StackPanel>
            </ScrollViewer>
        </Grid>
        
        <!-- Frame with pages -->
        <ScrollViewer Grid.Column="1" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" Margin="20 20 20 20">
            <Frame Source="{Binding CurrentFramePage, Mode=OneWay}" NavigationUIVisibility="Hidden" Background="White"/>
        </ScrollViewer>
    </Grid>
</Window>
