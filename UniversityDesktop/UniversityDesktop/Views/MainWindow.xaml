<Window x:Class="UniversityDesktop.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:UniversityDesktop.ViewModels"
        xmlns:local="clr-namespace:UniversityDesktop"
        mc:Ignorable="d"
        Title="Электронная зачетка МАИ" Height="720" Width="1280" WindowState="Maximized" Background="#E6E6E6" >
    
    <Window.DataContext>
        <viewModel:ViewModel />
    </Window.DataContext>
    
    <Window.Resources>
        <ControlTemplate TargetType="Button" x:Key="btTemplate">
            <Border CornerRadius="25" 
                    BorderBrush="RoyalBlue" 
                    BorderThickness="1"
                    Background="White">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
        
        <ControlTemplate TargetType="Frame" x:Key="frameTemplate">
            <Border CornerRadius="25"
                    BorderBrush="White"
                    BorderThickness="1"
                    Background="White">
                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
            </Border>
        </ControlTemplate>
    </Window.Resources>
    
    
    <Grid ShowGridLines="False">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="2.5*" />
        </Grid.ColumnDefinitions>
        
        <!-- Menu (student info and control buttons) -->
        <Grid ShowGridLines="False"
              Grid.Column="0"
              Margin="20 20 20 20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="0.1*" />
                <RowDefinition Height="1.2*" />
            </Grid.RowDefinitions>
            <!-- Student info -->
            <Border Grid.Row="0" 
                    CornerRadius="25" 
                    Background="RoyalBlue">
                <StackPanel Orientation="Vertical">
                    <Image Source="../Images/mai.png"
                                   Width="100"
                                   Height="100"
                                   Margin="10 10 0 0"
                                   HorizontalAlignment="Left"/>
                    <WrapPanel Orientation="Horizontal"
                            Margin="0 15 0 0">
                     <TextBlock FontSize="20"
                                FontFamily="Arial"
                                Foreground="White"
                                Margin="10 0 0 0"
                                Text="Тришин" />
                     <TextBlock FontSize="20"
                                FontFamily="Arial"
                                Foreground="White"
                                Margin="10 0 0 0"
                                Text="Дмитрий" />
                     <TextBlock FontSize="20"
                                FontFamily="Arial"
                                Foreground="White"
                                Margin="10 0 0 0"
                                Text="Александрович" />
                    </WrapPanel>
                    <TextBlock Margin="10 15 10 5"
                            FontSize="15"
                            FontFamily="Arial"
                            Foreground="LightGray"
                            Text="Группа"/>
                    <TextBlock Margin="10 5 10 5"
                            FontSize="20"
                            FontFamily="Arial"
                            Foreground="White"
                            Text="М8О-311Б-19" />
                    <TextBlock Margin="10 15 10 5"
                            FontSize="15"
                            FontFamily="Arial"
                            Foreground="LightGray"
                            Text="Код специальности"/>
                    <TextBlock Margin="10 5 10 5"
                            FontSize="20"
                            FontFamily="Arial"
                            Foreground="White"
                            Text="02.03.02" />
                    <TextBlock Margin="10 15 10 5"
                            FontSize="15"
                            FontFamily="Arial"
                            Foreground="LightGray"
                            Text="Направление"/>
                    <StackPanel Orientation="Vertical">
                     <TextBlock Margin="10 5 10 5"
                                TextWrapping="Wrap"
                                FontSize="20"
                                FontFamily="Arial"
                                Foreground="White"
                                Text="Фундаментальная информатика и информационные технологии" />
                    </StackPanel>
                </StackPanel>
            </Border>
            
            <!-- Control buttons -->
            <Border Grid.Row="2" 
                    CornerRadius="25"
                    Background="White">
                <StackPanel VerticalAlignment="Center">
                    <Button Margin="10 10 10 10" 
                            Height="70"
                            FontSize="20"
                            FontFamily="Arial"
                            FontWeight="Medium"
                            Foreground="RoyalBlue"
                            Content="Расписание занятий" 
                            Template="{StaticResource btTemplate}" 
                            Command="{Binding LessonTimetableButtonCommand}">
                    </Button>
                    <Button Margin="10 10 10 10" 
                            Height="70"
                            FontSize="20"
                            FontFamily="Arial"
                            FontWeight="Medium"
                            Foreground="RoyalBlue"
                            Content="Расписание сессии"
                            Template="{StaticResource btTemplate}" 
                            Command="{Binding ExamButtonCommand}" />
                    <Button Margin="10 10 10 10" 
                            Height="70" 
                            FontSize="20"
                            FontFamily="Arial"
                            FontWeight="Medium"
                            Foreground="RoyalBlue"
                            Content="Оценки" 
                            Template="{StaticResource btTemplate}" 
                            Command="{Binding MarksButtonCommand}" />
                    <Button Margin="10 10 10 10" 
                            Height="70" 
                            FontSize="20"
                            FontFamily="Arial"
                            FontWeight="Medium"
                            Foreground="RoyalBlue"
                            Content="Мероприятия" 
                            Template="{StaticResource btTemplate}" 
                            Command="{Binding EventsButtonCommand}" />
                </StackPanel>
            </Border>
        </Grid>
        
        <!-- Frame with pages -->
        <Border Grid.Column="1" 
                CornerRadius="25"
                Background="White"
                BorderThickness="1"
                Margin="20 20 20 20">
            <Frame Margin="20 20 20 20"
                   Source="{Binding CurrentFramePage, Mode=OneWay}" 
                   NavigationUIVisibility="Hidden" 
                   Background="White"/>
        </Border>
    </Grid>
</Window>
